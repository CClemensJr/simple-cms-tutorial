<% @page_title = "Edit Section" %>

<%= link_to("<< Back to List", pages_path, class: 'back-link') %>

<div class="sections edit">
  <h2>Update Section</h2>
  <!--Posting to the subjects_path creates a new object named create -->
  <%= form_for(@section) do |f| %>

    <table summary="Section form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Page ID</th>
        <td><%= f.text_field(:subject_id) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= f.text_field(:content) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>
  <% end %>
</div>
